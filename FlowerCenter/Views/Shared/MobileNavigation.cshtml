
@model IEnumerable<FlowerCenter.Models.BLL.navigationBLL>
<nav>
    <ul class="mobile-menu">
        @foreach (var item in Model)
        {
        <li class="menu-item-has-children">
            <a href="@Url.Action("shop", "shop", new { Category = "", CategoryIDs = item.CategoryID, SubCategoryIDs = "",ColorIDs = "",MinPrice = "AED0",MaxPrice = "AED5000",Searchtext = "",SortID=0})">@item.Title</a>

            @if (item.SubCategories.Count > 0)
            {
                <ul class="dropdown">
                    @foreach (var sub in item.SubCategories)
                    {
                    <li><a href="@Url.Action("shop", "shop", new { Category = "", CategoryIDs = "", SubCategoryIDs = sub.SubCategoryID ,ColorIDs = "",MinPrice = "AED0",MaxPrice = "AED5000",Searchtext = "",SortID=0})">@sub.Title</a></li>

                    }
                </ul>
            }
        </li>
        }
    </ul>
</nav>